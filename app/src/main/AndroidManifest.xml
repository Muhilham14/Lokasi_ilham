<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lokasi_ilham">

    <uses-permission android:name="android.permission.INTERNET" />
    // Permission atau perizinan atas penggunaan Internet

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    // Permission atau perizinan atas pengaksesan informasi jaringan

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    // Permission atau perizinan atas lokasi yang diakses berdasarkan Satelit
    // akurasi tinggi sekitar 3m, waktu dapat data lama

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    // Permission atau perizinan atas lokasi yang diakses berdasarkan sinyal BTS (Base Transceiver Station)
    // akurasi rendah sekitar 1km, waktu dapat data cepat

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lokasi_ilham">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>